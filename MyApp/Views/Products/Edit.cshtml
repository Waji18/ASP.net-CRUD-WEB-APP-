@model MyApp.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h3>Edit Product</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label for="ProductName">Name</label>
        <input type="text" class="form-control" asp-for="ProductName" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" class="form-control" asp-for="Quantity" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Tags">Tags</label>
        <input type="text" class="form-control" asp-for="Tags" />
        <span asp-validation-for="Tags" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Categories">Category</label>
        <input type="text" asp-for="Categories" class="form-control" />
    </div>
            
   

    <button type="submit" class="btn btn-primary">Save</button>
</form>
